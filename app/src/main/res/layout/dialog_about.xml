<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp">
    
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp" 
        android:src="@drawable/icons8_about_50"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Thông tin sản phẩm"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textSize="20sp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên ứng dụng: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="eShopping"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/color_blueText"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:text="Phiên bản hiện tại: v1.0"
        android:gravity="center"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ngày ra mắt: "
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="13/ 01/ 2019"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="6sp"
        android:layout_marginRight="16sp"
        android:text="Nhóm phát triển: "
        android:textStyle="bold"
        android:gravity="left"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="16sp"
        android:text="1.  Phan Thanh Tùng     MSSV: 16521399"
        android:gravity="left"
        android:textStyle="italic"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="16sp"
        android:text="2.  Lê Việt Hoàng           MSSV: 16520434"
        android:gravity="left"
        android:textStyle="italic"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginBottom="10dp"
        android:textStyle="italic"
        android:text="Sinh viên khoa CNPM, Trường ĐH CNTT"
        android:gravity="left"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/btn_done"
        android:layout_marginTop="16dp"
        style="@style/btn"
        android:text="OK"/>

</LinearLayout>